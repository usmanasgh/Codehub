
@{
    ViewBag.Title = "Details";

    var employee = ViewData["EmployeeModel"] as CodeHub.NetCore5.Models.Employee;
}

<h2>@ViewData["PageTitle"]</h2>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/noimage.png" />

                <h4>Employee ID : @employee.Id</h4>  
                <h4>Email : @employee.Email</h4>
                <h4>Department : @employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>



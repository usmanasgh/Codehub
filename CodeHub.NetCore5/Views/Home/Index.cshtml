@model IEnumerable<Employee>

@{
    ViewBag.Title = "Index";
}

<div class="card-deck">
    
    @foreach (var employee in Model)
    {
        var PhotoPath = "~/Images/" + (employee.PhotoPath ?? "noimage.png");

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top ImageThumbnail" height="250" src="@PhotoPath" asp-append-version="true" />
            
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                
                @*<a href="@Url.Action("details","home", new { id = employee.Id })" class="btn btn-primary">Show</a>
                <a href="/home/details/@employee.Id" class="btn btn-primary">View</a>*@

                <a class="btn btn-primary" asp-action="edit" asp-controller="home" asp-route-id="@employee.Id">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }

</div>

